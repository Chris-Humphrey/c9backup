        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Pre-Works Comments</span>
            </div>
            <textarea class="form-control" aria-label="Pre-Works Comments" name="report[preWorkCom]" required><%= report.preWorkCom %></textarea>
        </div>
        
        <div class="table-responsive">

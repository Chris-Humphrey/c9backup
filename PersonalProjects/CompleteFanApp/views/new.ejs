<% include ./partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">New Job</h1>
    </div>
    <form action="/reports" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Our Ref:</label>
                <input type="text" class="form-control" name="report[ref]" placeholder="C#####" required>
            </div>
            <div class="form-group col-md-6">
                <label>Date Of Report</label>
                <input type="date" class="form-control" name="report[reportDate]" id="theDate" required >
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Company</label>
                <input type="text" class="form-control" name="report[company]" placeholder="company name" required>
            </div>
            <div class="form-group col-md-6">
                <label>Date Of Works</label>
                <input type="date" class="form-control" name="report[worksDate]" placeholder="date" required >
            </div>
        </div>
        <div class="container">
            <div class="form-group row">
                <div class="col-xs-3">
                    <label>Select Machine Type</label>
                    <select id="sel" name="report[machine]" class="form-control" onchange="populate(this.id, 'img')" required>
                        <option value="">Select Machine</option>
                        <option value="Belt Driven">Belt Driven</option>
                        <option value="Arr 7">Arr 7</option>
                        <option value="Coupling Driven">Coupling Driven</option>
                        <option value="Direct Driven">Direct Driven</option>
                        <option value="Plug Driven">Plug Driven</option>
                    </select>
                </div>
            </div>
        </div>
        <div>
            <img id="img" class="img-fluid">
        </div>
        <br>
        <div id="machine-hidden" class="container">
            <div class="form-group row">
                <div class="col-xs-3">
                    <label>Add Second Machine Type</label>
                    <select id="sel2" name="report[machine2]" class="form-control" onchange="populate(this.id, 'img2')">
                        <option value="">Select Machine</option>
                        <option value="Belt Driven">Belt Driven</option>
                        <option value="Arr 7">Arr 7</option>
                        <option value="Coupling Driven">Coupling Driven</option>
                        <option value="Direct Driven">Direct Driven</option>
                        <option value="Plug Driven">Plug Driven</option>
                    </select>
                </div>
            </div>
        </div>
        <div>
            <img id="img2" class="img-fluid">
        </div>
        
        
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Fan Manufacture</label>
                <input type="text" class="form-control" name="report[fanMake]" placeholder="fan make" required>
            </div>
            <div class="form-group col-md-6">
                <label>Serial No.</label>
                <input type="text" class="form-control" name="report[fanSerial]" placeholder="xxxxxxxxx" required >
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Fan Size</label>
                <input type="text" class="form-control" name="report[fanSize]" placeholder="S,M,L" required>
            </div>
            <div class="form-group col-md-6">
                <label>Inverter Hz:</label>
                <input type="text" class="form-control" name="report[inverterHz]" placeholder="0Hz" required >
            </div>
        </div>
        
        <br>
        
        <div class="table-responsive">
            <table id="works" class="table table-bordered">
                <col>
                <colgroup span="2"></colgroup>
                <colgroup span="2"></colgroup>
                <colgroup span="2"></colgroup>
                <colgroup span="2"></colgroup>
                <colgroup span="2"></colgroup>
                <colgroup span="2"></colgroup>
                <colgroup span="2"></colgroup>
                <tr>
                    <td id="worktitle" colspan="11">Pre-Works</td>
                </tr>
                <tr class="rowhead">
                    <th id="hz" rowspan="1">HZ</th>
                    <th class="tableheader" colspan="2" scope="colgroup">Mtr Horizontal</th>
                    <th class="tableheader" colspan="2" scope="colgroup">Mtr Vertical</th>
                    <th class="tableheader" colspan="1" scope="col">Mtr Axial</th>
                    <th class="tableheader" colspan="2" scope="colgroup">Fan Horizontal</th>
                    <th class="tableheader" colspan="2" scope="colgroup">Fan Vertical</th>
                    <th class="tableheader" colspan="1" scope="col">Fan Axial</th>
                </tr>
                <tr>
                    <td rowspan="1"></td>
                    <th scope="col">H1</th>
                    <th scope="col">H2</th>
                    <th scope="col">V1</th>
                    <th scope="col">V2</th>
                    <th scope="col">A</th>
                    <th scope="col">H1</th>
                    <th scope="col">H2</th>
                    <th scope="col">V1</th>
                    <th scope="col">V2</th>
                    <th scope="col">A</th>
